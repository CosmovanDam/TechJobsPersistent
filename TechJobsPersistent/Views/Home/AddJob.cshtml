@using TechJobsPersistent.ViewModels;

@model AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>
    <div class="form-group">
        <a asp-controller="Employers" asp-action="Add">Add an Employer</a>
        <label asp-for="Employers">Employer</label>
        <select asp-for="Employers" asp-items="Model.Employers"></select>
        <span asp-validation-for="Employers"></span>
    </div>

    <input type="submit" value="Add Job" />
</form>